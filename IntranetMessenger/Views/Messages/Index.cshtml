@model IEnumerable<IntranetMessenger.Models.Message>

@{
    ViewBag.Title = "Index";
}

<h2>Messages</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reciever)
        </th>
        <th>
            @Html.DisplayName("Message Text")
        </th>
        <th>
            @Html.DisplayName("Send Time")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reciever)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MessageText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SendTime)
        </td>
    </tr>
}

</table>
