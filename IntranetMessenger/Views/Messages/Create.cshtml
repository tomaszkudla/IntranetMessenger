@model IntranetMessenger.Models.MessageTextInput

@{
    ViewBag.Title = "Create";
}

<h2>Message</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-10">
                <h4>To: @Model.Reciever</h4>
            </div>

            <div class="col-md-10">

                <textarea class="form-control" rows="5" id="MessageText" name="MessageText" type="text" value=""></textarea>
                @Html.ValidationMessageFor(model => model.MessageText, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
